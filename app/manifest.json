{
  "name": "Chess Helper",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Little tool, helping to use chess.com website",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://www.chess.com/"
  ],
  "browser_action": {
    "default_icon": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*"
      ],
      "js": [
        "inject.js"
      ],
      "run_at": "document_end",
      "css": [
        "styles/main.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "build.js"
  ]
}
